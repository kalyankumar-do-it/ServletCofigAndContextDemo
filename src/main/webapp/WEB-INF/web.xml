<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>ServletCofigAndContextDemo</display-name>
  <welcome-file-list>
    <welcome-file>registration.html</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <servlet-name>register</servlet-name>
    <servlet-class>com.techjs.RegistrationServlet</servlet-class>
    
    <init-param>
      <param-name>state</param-name>
      <param-value>Karnataka</param-value>
    </init-param>   
 
   <init-param>
      <param-name>db-path</param-name>
      <param-value>jdbc:mysql</param-value>
    </init-param>  
    
    <init-param>
      <param-name>db-host</param-name>
      <param-value>localhost</param-value>
    </init-param>  
    
  </servlet>
  
  
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.techjs.LoginServlet</servlet-class>
    
    
    <init-param>
      <param-name>state</param-name>
      <param-value>Karnataka</param-value>
    </init-param>   
 
   
  </servlet>
  
  
   <context-param>
      <param-name>country</param-name>
     <param-value>india</param-value>
   </context-param>
  
  
  <servlet-mapping>
     <servlet-name>register</servlet-name>
     <url-pattern>/registration</url-pattern>
  </servlet-mapping>
  
    <servlet-mapping>
     <servlet-name>login</servlet-name>
     <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
</web-app>